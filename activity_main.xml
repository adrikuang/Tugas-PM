        android:layout_toStartOf="@+id/visible4"
        android:layout_toLeftOf="@+id/nama"
        android:text=" Pendidikan"
        android:textColor="@color/purple_700"
        android:textSize="18dp"
        android:textStyle="bold" />

    <View
        android:id="@+id/visible4"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@id/pengalaman_text_thn3"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="11dp"
        android:layout_marginTop="19dp"
        android:layout_marginEnd="10dp"
        android:layout_toRightOf="@+id/foto_profile"
        android:background="@color/teal_200"
        android:visibility="visible" />



    <TextView
        android:id="@+id/pendidikan_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/visible4"
